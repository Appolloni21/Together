<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="@color/davide"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:id="@+id/homepagecard"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homepagerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/cardprofilepic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cardnickname"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            card_view:layout_constraintBaseline_toTopOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/cardprofilepic" />

        <TextView
            android:id="@+id/cardcity"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            card_view:layout_constraintLeft_toRightOf="@id/cardprofilepic"
            card_view:layout_constraintTop_toBottomOf="@id/cardnickname" />

        <TextView
            android:id="@+id/cardtitle"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            card_view:layout_constraintLeft_toRightOf="@id/cardprofilepic"
            card_view:layout_constraintTop_toBottomOf="@id/cardcity" />

        <TextView
            android:id="@+id/carddescription"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            card_view:layout_constraintLeft_toRightOf="@id/cardprofilepic"
            card_view:layout_constraintTop_toBottomOf="@id/cardtitle" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="85dp"
            android:layout_height="78dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="181dp"
            android:layout_marginBottom="24dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/carddescription"
            card_view:layout_constraintVertical_bias="1.0"
            card_view:srcCompat="@drawable/accept2" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="83dp"
            android:layout_height="80dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="39dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="25dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toEndOf="@+id/imageButton"
            card_view:layout_constraintTop_toBottomOf="@+id/carddescription"
            card_view:layout_constraintVertical_bias="0.8"
            card_view:srcCompat="@drawable/refuse" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>