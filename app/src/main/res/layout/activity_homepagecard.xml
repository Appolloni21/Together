<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="@color/davide"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:id="@+id/homepagecard"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homepagerelativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        
        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            card_view:layout_constraintBaseline_toTopOf="parent"
            card_view:layout_constraintLeft_toRightOf="@+id/profilepic"
            android:layout_marginStart="16dp"
            android:textSize="25sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/nickname"
            card_view:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textSize="10sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/city"
            card_view:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/title"
            card_view:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textnumberavailable"
            android:text="available places:"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/description"
            card_view:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberavailable"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/description"
            card_view:layout_constraintLeft_toRightOf="@id/textnumberavailable"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textmaxnumber"
            android:text="number of places:"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/textnumberavailable"
            card_view:layout_constraintLeft_toRightOf="@id/profilepic"
            android:textSize="15sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxplaces"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintTop_toBottomOf="@id/textnumberavailable"
            card_view:layout_constraintLeft_toRightOf="@id/textmaxnumber"
            android:textSize="15sp"
            android:textColor="@color/white"/>









    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.cardview.widget.CardView>